@model MvcApplication.Models.album
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/_LayoutMaster.cshtml";
}

<h2>Details: @Model.Title</h2>
<p>
    <img alt="@Model.Title" src="@Model.albumArtUrl" />
</p>
<div id="album-details">
    <p>
        <em>Genre: </em>
        @Model.Genre.Name
    </p>
    <p>
        <em>Artist: </em>
        @Model.Artist.Name
    </p>
    <p>
        <em>Price: </em>
        @String.Format( "{0:F}", Model.Price)
    </p>
    <p class="button">
        @Html.ActionLink( "Add to cart" , "AddToCart" ,
 "ShoppingCart", new { id = Model.albumId }, "")
    </p>
</div>
